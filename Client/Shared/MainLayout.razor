@inherits LayoutComponentBase

<div class="sidebar">
    <NavMenu />
</div>

<div class="main">
    <div class="top-row px-4">
        <AuthorizeView>
            <Authorized>
                Witaj, @context.User.Identity.Name!
                <a href="authentication/logout" class="ml-md-auto">Wyloguj</a>
            </Authorized>
            <NotAuthorized>
                <a href="authentication/login">Zaloguj / Zarejestruj</a>
            </NotAuthorized>
        </AuthorizeView>
    </div>

    <div class="content px-4">
        @Body
    </div>
</div>
